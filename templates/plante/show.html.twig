{% extends 'base.html.twig' %}

{% block title %}{{ plante.name }}{% endblock %}

{% block body %}
  <div class="card shadow-lg rounded-3">
    <div class="card-body">
      <h1 class="card-title">{{ plante.name }}</h1>

      <p><strong>Prix :</strong> {{ plante.price }} â‚¬</p>

      {% if plante.description %}
        <p><strong>Description :</strong> {{ plante.description }}</p>
      {% endif %}

      <p><strong>Stock :</strong> {{ plante.stock }}</p>

      <div class="d-flex gap-2 flex-wrap mb-3">
        <button class="btn btn-success rounded-3"
                onclick="Cart.add({{ plante.id }}, '{{ plante.name|e('js') }}', {{ plante.price }}, {{ plante.stock }})">
          Ajouter au panier
        </button>
      </div>

      <a class="btn btn-secondary rounded-3" href="{{ path('accueil') }}">Retour</a>
    </div>
  </div>
{% endblock %}
